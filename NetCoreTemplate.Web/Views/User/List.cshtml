@using NetCoreTemplate.DAL.Permissions
@using NetCoreTemplate.SharedKernel.Extensions
@using NetCoreTemplate.Web.Extensions.HtmlHelper
@using Type = NetCoreTemplate.DAL.Permissions.Type
@using Action = NetCoreTemplate.DAL.Permissions.Action
@model NetCoreTemplate.ViewModels.Controllers.User.UserListViewModel
@{
    ViewData["Title"] = Model.Label["Dashboard:User:Users"];
    var hasActions = Model.HasAnyPermission(Module.Dashboard, Type.User, Action.Edit, Action.Delete);
}
@section styles
{
    <link rel="stylesheet" href="~/assets/vendor/DataTables/media/css/dataTables.bootstrap4.min.css">
}

<div class="row">
    <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="page-header">
            <h2 class="pageheader-title">@Model.Label["Dashboard:User:Users"]</h2> 
            <div class="page-breadcrumb">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("Index", "Dashboard")" class="breadcrumb-link">@Model.Label["Dashboard:MainMenu:Dashboard"]</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="@Url.Action("List", "User")" class="breadcrumb-link active">@Model.Label["Dashboard:MainMenu:Users"]</a>
                        </li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12">
        <div class="card">
            <div class="card-body zero-padding">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" style="width: 100%" role="grid">
                        <thead>
                            <tr role="row">
                                <th>@(Html.SortingHeader("Name", Model.Label["Dashboard:User:Name"]))</th>
                                <th>@(Html.SortingHeader("Active", Model.Label["Dashboard:User:Active"]))</th>
                                <th class="d-none d-sm-table-cell">@Model.Label["Dashboard:User:Roles"]</th>
                                @if (hasActions)
                                {
                                    <th>@Model.Label["Dashboard:User:Actions"]</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Data.Count; i++)
                            {
                                <tr role="row" class="@(i % 2 == 0 ? "even" : "odd")">
                                    <td>@($"{Model.Data[i].Firstname} {Model.Data[i].Lastname}".RemoveMiltipleSpaces())</td>
                                    <td>
                                        <strong style="color: @(Model.Data[i].Active ? "green" : "red")">
                                            @(Model.Data[i].Active ? Model.Label["Dashboard:User:Active"] : Model.Label["Dashboard:User:NotActive"])
                                        </strong>
                                    </td>
                                    <td class="d-none d-sm-table-cell">@(string.Join(", ", Model.Data[i].Roles.Select(x => x.Name)))</td>
                                    @if (hasActions)
                                    {
                                        <td>
                                            @if (Model.HasPermission(Module.Dashboard, Type.User, Action.Edit))
                                            {
                                                <a href="@Url.Action("Details", "User", new { id = Model.Data[i].Id })" class="btn btn-outline-dark action-button">
                                                    <i class="fa fa-fw fa-pencil-alt"></i>
                                                    @Model.Label["Dashboard:User:Edit"]
                                                </a>
                                            }
                                        </td>
                                    }
                                </tr>
                            }
                            @for (var i = Model.Data.Count; i < Model.PageSize; i++)
                            {
                                <tr role="row" class="@(i % 2 == 0 ? "even" : "odd")">
                                    <td colspan="@(hasActions ? "4" : "3")" style="padding: 24px;"></td>
                                </tr>
                            }
                            @if (Model.HasPermission(Module.Dashboard, Type.User, Action.Edit))
                            {
                                <tr role="row" class="odd">
                                    <td colspan="@(hasActions ? "4" : "3")" class="zero-padding">
                                        <a href="@Url.Action("Details", "User")" class="btn btn-brand table-button">@Model.Label["Dashboard:User:Add"]</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="offset-xl-2 col-xl-8 col-lg-12 col-md-12 col-sm-12 col-12" style="padding-top: 25px; text-align: center;">
        @Html.Pagination()
    </div>
</div>