@using System.Net
@using NetCoreTemplate.DAL.Permissions
@using NetCoreTemplate.Web.Extensions
@using Type = NetCoreTemplate.DAL.Permissions.Type
@using Action = NetCoreTemplate.DAL.Permissions.Action
@model NetCoreTemplate.ViewModels.Interfaces.IBaseAuthenticationViewModel
<li class="nav-divider">
    Menu
</li>
<li class="nav-item ">
    <a class="nav-link @(Model.IsActive(Url.Action("Index", "Dashboard")) ? "active" : string.Empty)" href="@Url.Action("Index", "Dashboard")">
        <i class="fa fa-fw fa-user-circle"></i> @Model.Label["Dashboard:MainMenu:Dashboard"]
    </a>
</li>
@if (Model.HasPermission(Module.Dashboard, Type.Roles, Action.View))
{
    <li class="nav-item ">
        <a class="nav-link @(Model.IsActive(Url.Action("List", "Role")) ? "active" : string.Empty)" href="@Url.Action("List", "Role")">
            <i class="fa fa-fw fa-tasks"></i> @Model.Label["Dashboard:MainMenu:Roles"]
        </a>
    </li>
}
@if (Model.HasPermission(Module.Dashboard, Type.Users, Action.View))
{
    <li class="nav-item ">
        <a class="nav-link @(Model.IsActive(Url.Action("List", "User")) ? "active" : string.Empty)" href="@Url.Action("List", "User")">
            <i class="fa fa-fw fa-users"></i> @Model.Label["Dashboard:MainMenu:Users"]
        </a>
    </li>
}
<div class="row" style="margin-top: 15px;">
    <div class="col-md-12">
        <span class="splash-description" style="text-align: left; font-weight: 600; color: #fff;">
            @Model.Label["Dashboard:MainMenu:ChangeLanguage"]
        </span>
    </div>
    <div class="col-md-12" style="margin-top: 5px;">
        <div>
            <a href="@Url.Action("Language", "Admin", new { languageCode = "nl", returnPath = WebUtility.UrlEncode(Model.Path) })">
                <span style="float: left; display: block;">
                    <img src="~/assets/img/flags/nl.png" style="border-width: 0px; width: 25px;" />
                </span>
                <span style="display: contents; padding: 15px 0 0 0;">
                    <span style="margin-left: 15px; color: white;">@Model.Label["Dashboard:MainMenu:Dutch"]</span>
                </span>
                <span class="clear-fix"></span>
            </a>
        </div>
    </div>
    <div class="col-md-12" style="margin-top: 5px;">
        <div>
            <a href="@Url.Action("Language", "Admin", new { languageCode = "en", returnPath = WebUtility.UrlEncode(Model.Path) })">
