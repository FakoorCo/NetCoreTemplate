                <span style="float: left; display: block;">
                    <img src="~/assets/img/flags/de.png" style="border-width: 0px; width: 25px;" />
                </span>
                <span style="display: contents; padding: 15px 0 0 0;">
                    <span style="margin-left: 15px; color: white;">@Model.Label["Dashboard:MainMenu:German"]</span>
                </span>
                <span class="clear-fix"></span>
            </a>
        </div>
    </div>
    <div class="col-md-12" style="margin-top: 5px;">
        <div>
            <a href="@Url.Action("Language", "Admin", new { languageCode = "fr", returnPath = WebUtility.UrlEncode(Model.Path) })">
