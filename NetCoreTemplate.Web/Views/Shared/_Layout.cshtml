@using NetCoreTemplate.SharedKernel.Extensions
@model NetCoreTemplate.ViewModels.Interfaces.IBaseAuthenticationViewModel
<!DOCTYPE html>
<html lang="@Model.CultureInfo.TwoLetterISOLanguageName.ToLower()">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/assets/vendor/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/theme.css">
    <link rel="stylesheet" href="~/assets/css/custom.css">
    <link rel="stylesheet" href="~/assets/vendor/fontawesome/web-fonts-with-css/css/fontawesome-all.min.css">
    <link rel="stylesheet" href="~/assets/vendor/material-design-iconic-font/dist/css/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/assets/vendor/flag-icon-css/css/flag-icon.min.css">
    <script src="~/assets/vendor/jquery/dist/jquery.min.js"></script>
    <title>@(ViewData.ContainsKey("Title") ? $"{ViewData["Title"]} - " : string.Empty)NetCoreTemplate - Template</title>
    @RenderSection("styles", false)
</head>
<body>
    <div class="dashboard-main-wrapper">
        <div class="dashboard-header">
            <nav class="navbar navbar-expand-lg bg-white fixed-top">
                <a class="navbar-brand" href="@Url.Action("Index", "Dashboard")">Template</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto navbar-right-top">
                        <li class="nav-item dropdown nav-user">
                            <a class="nav-link nav-user-img" href="#" id="navbarDropdownMenuLink2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <img src="~/assets/img/user.png" alt="@($"{Model.User.Firstname} {Model.User.Lastname}".RemoveMiltipleSpaces())" class="user-avatar-md rounded-circle">
                            </a>
                            <div class="dropdown-menu dropdown-menu-right nav-user-dropdown" aria-labelledby="navbarDropdownMenuLink2">
                                <div class="nav-user-info">
                                    <h5 class="mb-0 text-white nav-user-name">
                                        @($"{Model.User.Firstname} {Model.User.Lastname}".RemoveMiltipleSpaces())
                                    </h5>
                                    <span class="ml-2">@string.Join(", ", Model.User.RoleNames)</span>
                                </div>
                                <a class="dropdown-item" href="#">
                                    <i class="fas fa-cog mr-2"></i>Setting
                                </a>
                                <a class="dropdown-item" href="@Url.Action("SignOut", "Admin")">
                                    <i class="fas fa-power-off mr-2"></i>Logout
                                </a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
        <div class="nav-left-sidebar sidebar-dark">
            <div class="menu-list">
                <nav class="navbar navbar-expand-lg navbar-light">
                    <a class="d-xl-none d-lg-none" href="#">Dashboard</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav flex-column">
                            @Html.PartialAsync("_MainMenu", Model).Result
                        </ul>
                    </div>
                </nav>
            </div>
        </div>
        <div class="dashboard-wrapper">
            <div class="container-fluid dashboard-content">
                @RenderBody()
            </div>
            <div class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-xl-6 col-lg-6 col-md-12 col-sm-12 col-12">
                            Copyright © 2018 NetCoreTemplate. All rights reserved.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/vendor/jquery.slimscroll/jquery.slimscroll.min.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
